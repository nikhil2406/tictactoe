
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/board_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/welcome_words" />

    <ToggleButton
        android:id="@+id/ToggleButton00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginLeft="20dip"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton00"
        android:layout_toRightOf="@id/ToggleButton00"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton01"
        android:layout_toRightOf="@id/ToggleButton01"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToggleButton00"
        android:layout_marginLeft="20dip"
        android:textOff=""
        android:textSize="24sp" />
    
    <ToggleButton
        android:id="@+id/ToggleButton11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton10"
        android:layout_toRightOf="@id/ToggleButton10"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton11"
        android:layout_toRightOf="@id/ToggleButton11"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToggleButton10"
        android:layout_marginLeft="20dip"
        android:textOff=""
        android:textSize="24sp" />
    
    <ToggleButton
        android:id="@+id/ToggleButton21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton20"
        android:layout_toRightOf="@id/ToggleButton20"
        android:textOff=""
        android:textSize="24sp" />

    <ToggleButton
        android:id="@+id/ToggleButton22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ToggleButton21"
        android:layout_toRightOf="@id/ToggleButton21"
        android:textOff=""
        android:textSize="24sp" />
    
</RelativeLayout>
